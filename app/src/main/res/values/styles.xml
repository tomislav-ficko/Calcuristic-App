<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:gravity">center</item>
        <item name="android:textSize">20sp</item>
        <!--<item name="android:background">@drawable/layout_border</item>-->
    </style>

    <style name="NumberStyle" parent="ButtonStyle">
        <item name="android:background">@color/colorNumberButton</item>
    </style>

    <style name="FunctionStyle" parent="ButtonStyle">
        <item name="android:background">@color/colorFunctionButton</item>
    </style>

    <style name="EntryField">
        <item name="android:gravity">right|center_vertical</item>
        <item name="android:background">@color/colorEntryField</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:textSize">30sp</item>
    </style>

</resources>
