<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:text="0"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/entry_field"
            android:gravity="right|center_vertical"
            android:background="@color/lightGrey"
            android:paddingRight="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/all_clear"
            tools:ignore="HardcodedText"/>

    <TextView
            android:text="AC"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/all_clear"
            style="@style/OperatorStyle"
            app:layout_constraintTop_toBottomOf="@+id/entry_field"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/clear_entry"
            app:layout_constraintBottom_toTopOf="@id/seven"
            tools:ignore="HardcodedText"/>

    <TextView
            android:text="CE"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/clear_entry"
            style="@style/OperatorStyle"
            app:layout_constraintTop_toBottomOf="@+id/entry_field"
            app:layout_constraintLeft_toRightOf="@+id/all_clear"
            app:layout_constraintRight_toLeftOf="@id/percent"
            app:layout_constraintBottom_toTopOf="@id/eight"
            tools:ignore="HardcodedText"/>

    <TextView
            android:text="%"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/percent"
            style="@style/OperatorStyle"
            app:layout_constraintTop_toBottomOf="@+id/entry_field"
            app:layout_constraintLeft_toRightOf="@+id/clear_entry"
            app:layout_constraintRight_toLeftOf="@id/divide"
            app:layout_constraintBottom_toTopOf="@id/nine"
            tools:ignore="HardcodedText"/>

    <TextView
            android:text="รท"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/divide"
            style="@style/OperatorStyle"
            app:layout_constraintTop_toBottomOf="@+id/entry_field"
            app:layout_constraintLeft_toRightOf="@+id/percent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/multiply"
            tools:ignore="HardcodedText"/>

    <TextView
            android:text="7"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/seven"
            style="@style/NumberStyle"
            app:layout_constraintTop_toBottomOf="@+id/all_clear"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/eight"
            app:layout_constraintBottom_toTopOf="@id/four"
            tools:ignore="HardcodedText"/>

    <TextView
            android:text="8"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/eight"
            style="@style/NumberStyle"
            app:layout_constraintTop_toBottomOf="@+id/clear_entry"
            app:layout_constraintLeft_toRightOf="@+id/seven"
            app:layout_constraintRight_toLeftOf="@id/nine"
            app:layout_constraintBottom_toTopOf="@id/five"
            tools:ignore="HardcodedText"/>

    <TextView
            android:text="9"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/nine"
            style="@style/NumberStyle"
            app:layout_constraintTop_toBottomOf="@+id/percent"
            app:layout_constraintLeft_toRightOf="@+id/eight"
            app:layout_constraintRight_toLeftOf="@id/multiply"
            app:layout_constraintBottom_toTopOf="@+id/six"
            tools:ignore="HardcodedText"/>

    <TextView
            android:text="x"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/multiply"
            style="@style/OperatorStyle"
            app:layout_constraintTop_toBottomOf="@+id/divide"
            app:layout_constraintLeft_toRightOf="@+id/nine"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/minus"
            tools:ignore="HardcodedText"/>

    <TextView
            android:text="4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/four"
            style="@style/NumberStyle"
            app:layout_constraintTop_toBottomOf="@+id/seven"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/five"
            app:layout_constraintBottom_toTopOf="@id/one"
            tools:ignore="HardcodedText"/>

    <TextView
            android:text="5"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/five"
            style="@style/NumberStyle"
            app:layout_constraintTop_toBottomOf="@+id/eight"
            app:layout_constraintLeft_toRightOf="@+id/four"
            app:layout_constraintRight_toLeftOf="@id/six"
            app:layout_constraintBottom_toTopOf="@+id/two"
            tools:ignore="HardcodedText"/>

    <TextView
            android:text="6"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/six"
            style="@style/NumberStyle"
            app:layout_constraintTop_toBottomOf="@+id/nine"
            app:layout_constraintLeft_toRightOf="@+id/five"
            app:layout_constraintRight_toLeftOf="@+id/plus"
            app:layout_constraintBottom_toTopOf="@+id/three"
            tools:ignore="HardcodedText"/>

    <TextView
            android:text="-"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/minus"
            style="@style/OperatorStyle"
            app:layout_constraintTop_toBottomOf="@+id/multiply"
            app:layout_constraintLeft_toRightOf="@+id/six"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/plus"
            tools:ignore="HardcodedText"/>

    <TextView
            android:text="1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/one"
            style="@style/NumberStyle"
            app:layout_constraintTop_toBottomOf="@+id/four"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/two"
            app:layout_constraintBottom_toTopOf="@id/zero"
            tools:ignore="HardcodedText"/>

    <TextView
            android:text="2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/two"
            style="@style/NumberStyle"
            app:layout_constraintTop_toBottomOf="@+id/five"
            app:layout_constraintLeft_toRightOf="@+id/one"
            app:layout_constraintRight_toLeftOf="@id/three"
            app:layout_constraintBottom_toTopOf="@+id/comma"
            tools:ignore="HardcodedText"/>

    <TextView
            android:text="3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/three"
            style="@style/NumberStyle"
            app:layout_constraintTop_toBottomOf="@+id/six"
            app:layout_constraintLeft_toRightOf="@+id/two"
            app:layout_constraintRight_toLeftOf="@id/plus"
            app:layout_constraintBottom_toTopOf="@+id/equals"
            tools:ignore="HardcodedText"/>

    <TextView
            android:text="+"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/plus"
            style="@style/OperatorStyle"
            app:layout_constraintTop_toBottomOf="@+id/minus"
            app:layout_constraintLeft_toRightOf="@+id/three"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/equals"
            tools:ignore="HardcodedText"/>

    <TextView
            android:text="0"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/zero"
            style="@style/NumberStyle"
            app:layout_constraintTop_toBottomOf="@+id/one"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/comma"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:ignore="HardcodedText"/>

    <TextView
            android:text=","
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/comma"
            style="@style/NumberStyle"
            app:layout_constraintTop_toBottomOf="@+id/two"
            app:layout_constraintLeft_toRightOf="@+id/zero"
            app:layout_constraintRight_toLeftOf="@+id/equals"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:ignore="HardcodedText"/>

    <TextView
            android:text="="
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/equals"
            style="@style/OperatorStyle"
            app:layout_constraintTop_toBottomOf="@+id/three"
            app:layout_constraintLeft_toRightOf="@+id/comma"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:ignore="HardcodedText"/>

</androidx.constraintlayout.widget.ConstraintLayout>